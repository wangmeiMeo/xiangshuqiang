      <view class='cus-icon' bindtap='bgy'>
        <image data-src='../../images/c1.jpg' src='../../images/c1.jpg'></image>
      </view>
      <view class='cus-icon' bindtap='bgy'>
        <image data-src='../../images/c2.jpg' src='../../images/c2.jpg'></image>
      </view>
      <view class='cus-icon' bindtap='bgy'>
        <image data-src='../../images/c3.jpg' src='../../images/c3.jpg'></image>
      </view>
      <view class='cus-icon' bindtap='bgy'>
        <image data-src='../../images/c4.jpg' src='../../images/c4.jpg'></image>
      </view>
      <view class='cus-icon' bindtap='bgy'>
        <image data-src='../../images/c5.jpg' src='../../images/c5.jpg'></image>
      </view>
      <view class='cus-icon' bindtap='bgy'>
        <image data-src='../../images/c6.jpg' src='../../images/c6.jpg'></image>
      </view>
      <view class='cus-icon' bindtap='bgy'>
        <image data-src='../../images/c7.jpg' src='../../images/c7.jpg'></image>
      </view>
      <view class='cus-icon' bindtap='bgy'>
        <image data-src='../../images/c8.jpg' src='../../images/c8.jpg'></image>
