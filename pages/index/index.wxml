<view class="container">

  <swiper class="bannerswiper" indicator-dots="true"  circular="true">
    <block wx:for="{{banner}}" wx:for-index="index">
      <swiper-item>
        <image src="{{item}}" class="slide-image" />
      </swiper-item>
    </block>
  </swiper>

  <view class='user-p'>
    <view class='usernews'>
      <view class='news'>
        <view class='left-f'>
          公司动态
        </view>
