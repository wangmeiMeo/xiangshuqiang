          <view class='news-con'>
            相家庄鑫美包装无纺布经销处
          </view>
          <view class='news-con'>
            联系人:相书强
          </view>
          <view class='news-con' data-reply-phone="15130107396" bindtap="phoneCall" >
            联系方式：15130107396
          </view>
        </view>
      </view>
      <view class='userinfo'>
        <view class='photo'>
          <open-data type="userAvatarUrl"></open-data>
        </view>
      </view>
    </view>
  </view>
